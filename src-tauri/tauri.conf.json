{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bili2MP4",
  "version": "1.1.0",
  "identifier": "com.bili2mp4.app",
  "build": {
    "beforeDevCommand": "npx vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bili2MP4",
        "width": 900,
        "height": 650,
        "minWidth": 800,
        "minHeight": 550,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "resources": [
      "../resources/*"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    }
  }
}